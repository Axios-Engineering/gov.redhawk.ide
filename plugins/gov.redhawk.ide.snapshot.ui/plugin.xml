<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="datareceiver" name="DataReceiver" schema="schema/datareceiver.exsd"/>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="gov.redhawk.ide.ui.category"
            defaultHandler="gov.redhawk.ide.snapshot.internal.ui.SnapshotHandler"
            id="gov.redhawk.ide.snapshot.ui.commands.snapshot"
            name="Snapshot">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <command
               commandId="gov.redhawk.ide.snapshot.ui.commands.snapshot"
               id="gov.redhawk.ide.snapshot.ui.menus.snapshot"
               mnemonic="S">
            <visibleWhen
                  checkEnabled="false">
               <iterate
                     operator="and">
                  <adapt
                        type="gov.redhawk.model.sca.ScaUsesPort">
                  </adapt>
               </iterate>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>

   <extension point="org.eclipse.emf.ecore.generated_package">
      <!-- @generated SnapshotMetaData -->
      <package
            uri="platform:/resource/gov.redhawk.ide.snapshot.ui/src/snapshotMetaData.xsd"
            class="gov.redhawk.ide.snapshot.internal.ui.SnapshotMetaData.SnapshotMetadataPackage"
            genModel="model/SnapshotMetaData.genmodel"/>
   </extension>

   <extension point="org.eclipse.emf.ecore.extension_parser">
      <!-- @generated SnapshotMetaData -->
      <parser
            type="snapshotmetadata"
            class="gov.redhawk.ide.snapshot.internal.ui.SnapshotMetaData.util.SnapshotMetadataResourceFactoryImpl"/>
   </extension>
   <extension
         point="gov.redhawk.ide.snapshot.ui.datareceiver">
          <DataReceiver
            class="gov.redhawk.ide.snapshot.datareceiver.bin.BinDataReceiver"
            id="gov.redhawk.ide.snapshot.datareceiver.bin.BinDataReceiver"
            name="Binary files (.bin and .xml)">
      </DataReceiver>
      <DataReceiver
            class="gov.redhawk.ide.snapshot.datareceiver.bin.BinSriDataReceiver"
            id="gov.redhawk.ide.snapshot.datareceiver.bin.BinSriDataReceiver"
            name="Binary files (.bin and .sri)"></DataReceiver>
      <DataReceiver
            class="gov.redhawk.ide.snapshot.datareceiver.blue.BlueDataReceiver"
            id="gov.redhawk.ide.snapshot.datareceiver.blue.BlueDataReceiver"
            name="Midas BLUE file (.tmp)">
      </DataReceiver>
   </extension>
</plugin>
